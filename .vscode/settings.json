	"todo-tree.general.tags": [
		"BUG",
		"NOTE",
		"HACK",
		"FIX",
		"WARN",
		"WIP",
		"TODO",
		"CLEAN",
		"POLISH",
		"TEMP",
		"FYI"
	],
	"vscodeGitCommit.defaultVariablesValues": {
		"taskCode": "DMS-",
		"scope": "🕹️game",
	},
	"vscodeGitCommit.variablesDisplayTitles": {
		"action": "⚒️ part of",
		"scope": "Commit scope"
	},
	"vscodeGitCommit.template": [
		"{prefix}({scope}): {message}",
		"    {action} DMS-{taskCode}"
	],
	"vscodeGitCommit.variables": {
		"prefix": [
			{
				"label": "✨feat",
				"detail": "A new, relatively big feature. Correlates with MAJOR release in SemVer"
			},
			{
				"label": "🐛fix",
				"detail": "Fixes a bug in the codebase"
			},
			{
				"label": "📝docs",
				"detail": "Documentation added or updated"
			},
			{
				"label": "🔮refactor",
				"detail": "Change something in the codebase without changing its functionality"
			},
			{
				"label": "🚀perf",
				"detail": "A code change that improves performance"
			},
			{
				"label": "🤖ci",
				"detail": "A commit where build system, external dependecies or CI/CD configuration files are changed"
			},
			{
				"label": "🧪test",
				"detail": "A commit where tests and specs were updated or added"
			},
			{
				"label": "📦build",
				"detail": "Changes that affect the build system"
			},
			{
				"label": "🧹chore",
				"detail": "Cleaning up linter warnings, console.log statements or Typescript errors"
			}
		],
		"scope": [
			{
				"label": "🕹️game",
				"detail": "Game related changes"
			},
			{
				"label": "📦assets",
				"detail": "Adds/Moves assets in the codebase"
			},
			{
				"label": "🛠️tools",
				"detail": "Tooling related changes"
			},
			{
				"label": "📐ui",
				"detail": "Changes related to the UI"
			}
		],
		"action": [
			{
				"label": "",
				"detail": "Empty"
			},
			{
				"label": "⚒️ part of",
				"detail": "A commit that progresses a task or an epic"
			},
			{
				"label": "✅ closes",
				"detail": "A commit that marks the finish of a task or an epic"
			},
			{
				"label": "💀 deprecates",
				"detail": "A commit that deprecates something"
			}
		]
	}
}
